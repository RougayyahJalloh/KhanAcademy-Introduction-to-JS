var leftX = 245; 
var rightX = 280; 

var xPos = 200;
var yPos = 200;


draw = function() {
    background(29, 40, 115);
    
    //drawing the moon 
    noStroke(); 
    fill(220, 232, 230);
    ellipse(0,0, 200, 200); 
    
    //clouds
    noStroke();
    fill(46, 75, 110);
    
    //left cloud
    ellipse(leftX, 100, 100, 77); 
    ellipse(leftX+62, 105, 80, 60); 
    ellipse(leftX-62, 105, 80, 60); 
    
    //right cloud
    ellipse(rightX, 100, 100, 77); 
    ellipse(rightX+32, 105, 80, 60); 
    ellipse(rightX-32, 105, 80, 60); 
    
    
    //the shooting star 
    fill(255, 242, 0);
    noStroke(); 
    rect(xPos, yPos, 10, 10);
    
    
       //Buildings 
       //First building 
       stroke(0, 0, 0); 
    fill(38, 35, 35);
    rect(0, 200, 50, 100); 

     //Second building 
    fill(38, 35, 35);
    rect(50, 130, 50, 175); 
    
    //Third building 
    fill(38, 35, 35);
    rect(100, 145, 50, 155); 
    
 
    //Fourth building 
    fill(38, 35, 35);
    rect(150, 200, 50, 100); 
    
      //drawing the land beneath 
    fill(55, 89, 13);
    rect(0, 300, 400, 500); 
    
    

    leftX += 1; 
    rightX -= 1; 
    xPos += 3;
    yPos -= 3; 
    
     xPos++; 
     yPos++; 
};

 
